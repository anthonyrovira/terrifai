---
import Layout from "@layouts/Layout.astro";
import ImageEditor from "@components/ImageEditor.astro";
import { getCldImageUrl } from "astro-cloudinary/helpers";

const { searchParams } = Astro.url;
const id = searchParams.get("id");
if (id == null) return Astro.redirect("/");

const url = getCldImageUrl({ src: id });
---

<Layout title="Halloween Image Editor">
  <main data-id={id} class="container mx-auto px-4 py-8">
    <h1 class="text-4xl md:text-5xl font-bold text-halloween-orange mb-8 text-center">Halloween Image Editor</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-halloween-purple rounded-lg p-4 shadow-xl">
        <two-up class="mb-6 w-full h-auto rounded-lg">
          <img id="original" src={url} alt="Original picture" />
          <img id="preview" src={url} alt="Preview" />
        </two-up>
      </div>

      <div class="bg-halloween-purple rounded-lg p-4 shadow-xl">
        <ImageEditor />
      </div>
    </div>
  </main>
</Layout>

<script>
  import { setupImageEditor } from "@scripts/imageEditor";
  const main = document.querySelector("main");
  const id = main?.getAttribute("data-id") ?? "";

  document.addEventListener("DOMContentLoaded", () => {
    setupImageEditor(id || "");
  });
</script>
