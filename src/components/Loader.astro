---
interface Props {
  id?: string;
  class?: string;
}

const { id = "image-loader", class: className = "" } = Astro.props;
---

<div id={id} class:list={["fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50", className]}>
  <div class="bg-white rounded-lg p-5 flex flex-col items-center">
    <div class="w-12 h-12 border-4 border-halloween-orange border-t-halloween-purple rounded-full animate-spin"></div>
    <p class="mt-3 text-halloween-purple font-bold">Loading...</p>
  </div>
</div>
